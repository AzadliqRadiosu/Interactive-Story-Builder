<%= semantic_form_for(@content, url: save_content_story_path(id:params[:id])) do |f| %>

  <%= f.inputs do %>
    <%= f.input :title, :input_html => { :id => "contentTitle" } %>
    <%= f.input :subtitle, :input_html => { :id => "contentSubtitle" } %>
    <%= f.input :content, :input_html => { :id => "contentArticle" }  %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
