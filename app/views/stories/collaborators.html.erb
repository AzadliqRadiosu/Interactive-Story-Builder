<% title t('.title', :title => @story.title) %>

<%= render partial: 'shared/story_nav' %>

<h2><%= t('.owner_header') %></h2>
<%= image_tag @story.user.avatar_url(:'50x50'),:size=>"50x50", :title => @story.user.nickname %>

<h2><%= t('.collaborators_header') %></h2>
<p>
  <%= t('.explanation') %>
</p>
<div class="row">
  <div class="col-sm-6">
    <h3><%= t('.editors_header') %></h3>
    <p>
      <%= t('.editor_explanation') %>
    </p>
    <% if @editors.present? || @editor_invitations.present? %>
      <ul class="current-collaborators" style="margin-bottom: 10px;">
        <% @editors.each do |editor| %>
          <% user = editor.user %>
          <li style="display:inline-block; margin-right: 5px;">
            <%= image_tag user.avatar_url(:'50x50'),:size=>"50x50", :title => user.nickname %>
            <%= link_to '#', :class => 'remove-collaborator btn btn-danger btn-xs active', 
                    :style => 'display: block;width: 50px; padding: 1px;', :title => t('.remove_title', :name => user.nickname),
                    :'data-id' => user.id,
                    :'data-url' => story_remove_collaborator_path(@story),
                    :'data-msg-id' => 'remove-editor-message' do %>
              <i style="" class="glyphicon glyphicon glyphicon-remove-circle"></i>
            <% end %>
          </li>
        <% end %>
        <% @editor_invitations.each do |inv| %>
          <li style="display:inline-block; margin-right: 5px;">
            <% 
              path = nil
              nickname = nil
              email = nil
              if inv.to_user_id.present?
                path = inv.to_user.avatar_url(:'50x50')
                nickname = inv.to_user.nickname
                email = inv.to_user.email
              else
                path = User.new.avatar_url(:'50x50')
                nickname = inv.to_email
                email = inv.to_email
              end
            %>
            <%= image_tag path,:size=>"50x50", :style => 'border: solid 2px #ED9C28;', :title => t('.not_accepted_title', :name => nickname) %>
            <%= link_to '#', :class => 'remove-collaborator btn btn-danger btn-xs active', 
                    :style => 'display: block;width: 50px; padding: 1px;', :title => t('.remove_title', :name => nickname),
                    :'data-id' => email, 
                    :'data-url' => story_remove_invitation_path(@story),
                    :'data-msg-id' => 'remove-editor-message' do %>
              <i style="" class="glyphicon glyphicon glyphicon-remove-circle"></i>
            <% end %>
          </li>
        <% end %>
        <li id="remove-editor-message" style="display: none;" class="alert"></li>
      </ul>
    <% end %>
  </div>
  <div class="col-sm-6">
    <h3><%= t('.translators_header') %></h3>
    <p>
      <%= t('.translator_explanation') %>
    </p>
    <% if @translators.present? || @translator_invitations.present? %>
      <ul class="current-collaborators" style="margin-bottom: 10px;">
        <% @translators.each do |translator| %>
          <% user = translator.user %>
          <li style="display:inline-block; margin-right: 5px;">
            <%= image_tag user.avatar_url(:'50x50'),:size=>"50x50", :title => user.nickname %>
            <%= link_to '#', :class => 'remove-collaborator btn btn-danger btn-xs active', 
                    :style => 'display: block;width: 50px; padding: 1px;', :title => t('.remove_title', :name => user.nickname),
                    :'data-id' => user.id,
                    :'data-url' => story_remove_collaborator_path(@story),
                    :'data-msg-id' => 'remove-translator-message' do %>
              <i style="" class="glyphicon glyphicon glyphicon-remove-circle"></i>
            <% end %>
          </li>
        <% end %>
        <% @translator_invitations.each do |inv| %>
          <li style="display:inline-block; margin-right: 5px;">
            <% 
              path = nil
              nickname = nil
              email = nil
              if inv.to_user_id.present?
                path = inv.to_user.avatar_url(:'50x50')
                nickname = inv.to_user.nickname
                email = inv.to_user.email
              else
                path = User.new.avatar_url(:'50x50')
                nickname = inv.to_email
                email = inv.to_email
              end
            %>
            <%= image_tag path,:size=>"50x50", :style => 'border: solid 2px #ED9C28;', :title => t('.not_accepted_title', :name => nickname) %>
            <%= link_to '#', :class => 'remove-collaborator btn btn-danger btn-xs active', 
                    :style => 'display: block;width: 50px; padding: 1px;', :title => t('.remove_title', :name => nickname),
                    :'data-id' => email,               
                    :'data-url' => story_remove_invitation_path(@story),
                    :'data-msg-id' => 'remove-translator-message' do %>
              <i style="" class="glyphicon glyphicon glyphicon-remove-circle"></i>
            <% end %>
          </li>
        <% end %>
        <li id="remove-translator-message" style="display: none;" class="alert"></li>
      </ul>
    <% end %>
  </div>
</div>



<h2><%= t('.add_header') %></h2>
<p>
  <%= t('.add_explanation') %>
</p>

<%= form_tag collaborators_story_path, method: :post, :id => 'collaborators'  do %>

  <div class="row">
    <div class="col-sm-6">
      <h3><%= t('.editors_header') %></h3>
      <div class="form-group">
        <label for="editor_ids"><%= t('.editor_label') %></label>
        <%= text_field_tag "editor_ids", '', class: 'form-control', :data => { load: params[:editor_error_ids]} %>
      </div>
    </div>
    <div class="col-sm-6">
      <h3><%= t('.translators_header') %></h3>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="translators_locale[]"><%= t('.language_label') %></label><br/>
            <%= select_tag "translators_locale[]", options_from_collection_for_select(@languages, "locale", "name", I18n.locale.to_s), 
                multiple: true, include_blank: false,
                class: 'selectpicker', :'data-live-search' => "true", :'data-size' => "7" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="translators_id[]"><%= t('.translator_label') %></label>
            <%= text_field_tag "translators_id[]", '', class: 'form-control translator_ids', :data => { load: params[:translator_error_ids]} %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="message"><%= t('.message') %></label>
    <%= text_area_tag "message", params[:message], rows: 5, class: 'form-control' %>
  </div>

  <div class="pull-right spacer">
    <%= submit_tag t('.submit'), :class => 'btn btn-default' %>
    <%= button_tag t('helpers.links.reset'), type: 'reset', class: 'btn btn-default' %> 
  </div> 

<% end %>
