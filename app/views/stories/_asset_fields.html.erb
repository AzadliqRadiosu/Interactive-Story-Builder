
   <% asset_item ||= nil %>
   <div style="border-bottom:1px solid #eee;  padding:20px 0px 0px 20px;margin-bottom:20px;height:180px;" class="fields">
    <!-- <label class=" control-label" for="slideshowImage"><%= t('activerecord.attributes.medium.image') %></label> -->
    <div style="width:160px;height:160px;float:left;background-color:gray;margin:0px 20px 0px 0px;">
	    <% if asset_item.present? && asset_item.asset.exists? %>
	    	<img src="<%= asset_item.asset.url(:thumbnail_preview) %>" />  
		<% end %>
    </div>
      <%= f.input :caption, placeholder: t('.placeholder.caption'), title: t('.title.caption'), :label => false %>
      <%= f.input :source,  placeholder: t('.placeholder.source'), title: t('.title.source'), :label => false %>
      <%= f.input :asset, :as => :file , :input_html => { :id => "slideshowImage", accept:"image/jpeg,image/png" , title: t('.title.asset') }, label: false
       %>       
      <%= f.input :asset_type, :as => :hidden , :value => Asset::TYPE[:slideshow_image] %>
    <div style="float:right;margin-right:20px;"><%= link_to_remove_fields "Remove", f %></div>
    
    </div>