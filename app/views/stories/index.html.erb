<% title  t('helpers.titles.story_list') %>

<%= link_to t('helpers.titles.new', model:Story.model_name.human) , new_story_path, class:"btn" %>
<div>&nbsp;</div>

<div class='row'>
  <div class='span12'>
    <table id='storiesTable' class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.story.title') %></th>        
        <th><%= t('activerecord.attributes.story.author') %></th>     
        <th></th>   
        <th></th>  
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.title %></td>        
        <td><%= story.author %></td>       

        <td><button type="button"  id='btnPublish' class="btn btn-warning btn-small<%= story.published ? '' : ' disabled'%>" title="<%= t('app.buttons.publish') %>" data-link='<%= publish_story_path(story) %>'> <i class="icon-globe icon-white" ></i></button>   </td>
        <td><button type="button"  id='btnPreview' class="btn btn-success btn-small" title="<%= t('app.buttons.preview') %>" data-link='<%= storyteller_show_path(story) %>'> <i class="icon-eye-open icon-white" ></i></button> </td>   
        <td>         
            <%= link_to clone_story_path(story) , class:"btn btn-primary btn-small" do %>
             <i class="icon-camera icon-white" ></i>
            <% end %>
         </td>   
         <td>         
            <%= link_to export_story_path(story) , class:"btn btn-primary btn-small" do %>
             <i class="icon-download icon-white" ></i>
            <% end %>
         </td> 
        <td><%= link_to t('helpers.links.edit_story'), edit_story_path(story) , class:"btn btn-small btn-info"%></td>        
        <td><%= link_to  t('helpers.links.admin_story'), sections_story_path(story), class:"btn btn-small btn-info" %></td>          
        <td><%= link_to  t('helpers.links.delete_story'), story, confirm: 'Are you sure?', method: :delete, class:"btn btn-small btn-danger"%></td>
      </tr>
    <% end %>
    </tbody>
    </table>
  </div>
</div>
<div id="previewStory" class="reveal-modal" style='height:768px;width:1366px' >     
      <div class='modal-data' style="width:100%; height:100%; border:1px solid #bfbfbf;"></div>
      <a class="close-reveal-modal">&#215;</a>
</div>
