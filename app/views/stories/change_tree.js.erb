 $(document).ready(function() 
 {  
 	var li = $("<li id='<%= @item.id %>' data-type='<%= @item.get_str_type %>' class='item'><div class='box'><div class='collapser'>+</div><div class='title'><i class='s <%= @item.get_icon %>'></i><span><%= @item.title %></span></div></div>");
 	$('.story-tree ul li').removeClass('active');
	$('.story-tree > ul').append(li.addClass('active'));		
	li.find('.box > .title').trigger('click');	
	$('#btnAddItem').trigger('click');
});
