<%- model_class = Language -%>
<% title t '.title', :default => model_class.model_name.human %>

<div class="form-actions">
  <%= link_to t('helpers.links.list'),
              admin_languages_path, :class => 'btn'  %>
  <%= link_to t('helpers.links.edit'),
              edit_admin_language_path(@news), :class => 'btn' %>
  <%= link_to t('helpers.links.delete'),
              admin_languages_path(@news),
              :method => :delete,
							:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn' %>
</div>

<p>
  <strong><%= model_class.human_attribute_name(:locale) %>:</strong>
  <%= @language.locale %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong>
  <%= @language.name %>
</p>

