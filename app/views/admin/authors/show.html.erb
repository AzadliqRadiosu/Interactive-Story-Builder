<%- model_class = Author -%>
<%- model_class_trans = AuthorTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_authors_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_author_path(@author), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_author_path(@author),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
  <%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' %>
</div>

<p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
<%= @author.name %></p>

<p><strong><%= model_class.human_attribute_name(:about) %>:</strong></p>
<div class="tinymce_format">
  <%= simple_format_no_tags(@author.about, {}, {sanitize: false}) %>
</div>



