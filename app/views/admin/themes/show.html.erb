<%- model_class = Theme -%>
<%- model_class_trans = ThemeTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

<div>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_themes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_theme_path(@theme), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_theme_path(@theme),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
  <%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn btn-default' %>
</div>

<p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
<%= @theme.name %></p>

<p><strong><%= model_class_trans.human_attribute_name(:edition) %>:</strong>
<%= @theme.edition %></p>

<p><strong><%= model_class_trans.human_attribute_name(:description) %>:</strong></p>
<div class="tinymce_format">
  <%= simple_format_no_tags(@theme.description, {}, {sanitize: false}) %>
</div>

<p><strong><%= model_class.human_attribute_name(:is_published) %>:</strong>
<%= @theme.is_published %></p>

<p><strong><%= model_class.human_attribute_name(:published_at) %>:</strong>
<%= l @theme.published_at if @theme.published_at.present? %></p>

<p><strong><%= model_class.human_attribute_name(:show_home_page) %>:</strong>
<%= @theme.show_home_page %></p>

