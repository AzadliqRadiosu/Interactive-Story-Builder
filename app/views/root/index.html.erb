
<% content_for(:header) { %>

    <header class="header intro<%= (1..2).to_a.sample %>">
      <div class="header-data">
        <div class="h1">    <%= t("app.common.app_intro").split(';')[0].html_safe %></div>
        <div class="h3">    <%= t("app.common.app_intro").split(';')[1].html_safe %></div>
        <div class="intro"> <%= t("app.common.app_intro").split(';')[2].html_safe %></div>             
      </div>
        <div class="build-story"><%= link_to  t("app.common.build"), new_story_path, :tabindex=>1 %></div>  
    </header>

<% } %>

<%= render partial: "shared/filter"%> 
<%= render partial: "shared/grid"%> 

<% if Rails.env.staging? %>
   <h1 style="margin:36px 36px;background-color: #F8E869;padding: 36px;line-height: 28px;">You are accessing a test site. Please go to <a href="http://storybuilder.jumpstart.ge/en" style="text-decoration:underline;">http://storybuilder.jumpstart.ge/en</a> to use the official site. </h1>
<% end %>