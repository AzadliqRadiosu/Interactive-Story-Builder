
<% title  t('helpers.titles.story_list_published') %>

<%= link_to t('helpers.titles.story_list') , stories_path , class:"btn" %>
<div>&nbsp;</div>

<div class='row'>
  <div class='span12'>
    <table id='publishedStoryTable' class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.story.title') %></th>        
        <th><%= t('activerecord.attributes.story.author') %></th>     
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.title %></td>        
        <td><%= story.author %></td>                       
        <td><%= link_to image_tag("/assets/preview16.png", :alt =>  t('helpers.links.view'), size: "16x10", ),  storyteller_show_path(story), :class=>"preview" %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
  </div>
</div>
<div id="previewStory" class="reveal-modal" style='height:768px;width:1366px' >     
      <div class='modal-data' style="width:100%; height:100%; border:1px solid #bfbfbf;"></div>
      <a class="close-reveal-modal">&#215;</a>
</div>
