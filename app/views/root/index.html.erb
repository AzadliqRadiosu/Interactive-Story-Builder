
<% title  t('helpers.titles.story_list_published') %>


<style>

.pins-wrapper {
  width: 100%;
  max-width: 1100px;
  min-width: 800px;
  margin: 50px auto;
  text-decoration:none;
  color:#fafafa;
}
.pin
{
  float:left;
  width:250px;
  background: #FEFEFE;
  border: 2px solid #FAFAFA;
  box-shadow: 0 1px 2px rgba(34, 25, 25, 0.4);
  margin: 0 20px 15px 2px;
  padding: 15px;
  padding-bottom: 5px;
  background: -webkit-linear-gradient(45deg, #FFF, #F9F9F9);

}

.pin .img {
    line-height: 250px; 
    border-bottom: 1px solid #ccc;
    padding-bottom: 15px;
    margin-bottom: 5px;   
}
.pin a
{text-decoration:none;
    opacity: 0.8;
}
.pin a:hover
{text-decoration:none;
    opacity: 1;

  
}


.pin .img img {
    vertical-align: middle;
}
.pin-caption
{
    display:inline-block;
    width:180px;
    line-height: 16px;
    height: 55px;
    overflow:hidden !important;
    text-overflow: ellipsis;
    text-decoration: none;
     color:#646464;
}
.pin:hover .pin-caption
{
 color:#444444;
}
.pin:hover
{  
  -moz-box-shadow: 0 0 5px rgba(0,0,0,0.5);
  -webkit-box-shadow: 0 0 5px rgba(0,0,0,0.5);
  box-shadow: 0 0 5px rgba(0,0,0,0.5);
  
}
.pin-publish
{
  float:right; 
    color:#9e9e9e; 
}
.pin-author
{
  float:left;
    color:#9e9e9e;
}
</style>

<div class="pins-wrapper">
<div class="pin-columns">
    <% @stories.each do |story| %>
     <a href="<%=storyteller_show_path(story) %>">
      <div class="pin">  
     
        <div class="img">
        <img src="<%= story.thumbnail.url(:"250x250") %>" />      
        </div>
        <p><div class="pin-caption"><%= story.title.truncate(255) %></div>     </p>
        <p> 
           
        <div class="pin-author"><%= story.author %></div>
       <div class="pin-publish"><%= l(story.published_at,:format => :publish) if story.published_at.present? %></div>        
      </p>
      </div>
     </a> 
    <% end %>
     <% @stories.each_with_index do |story,i| %>
      <div class="pin">  
       <a href="<%=storyteller_show_path(story) %>">
        <div class="img">
        <img src="<%= story.thumbnail.url(:"250x250") %>" />      
        </div>
        <p><div class="pin-caption"><%= story.title %></div>     </p>
        <p> 
             </a> 
        <div class="pin-author"><%= story.author %></div>
       <div class="pin-publish"><%= l(story.published_at,:format => :publish) if story.published_at.present? %></div>        
      </p>
      </div>
    <% end %>
    </div>
</div>





<div id="previewStory" class="reveal-modal" style='height:85%;width:90%;top:35px;' >     
      <div class='modal-data' style="width:100%; height:100%; border:1px solid #bfbfbf;"></div>
      <a class="close-reveal-modal">&#215;</a>
</div> 