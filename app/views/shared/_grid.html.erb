<div class="grid-wrapper">
  <div class="grid col-3">      
    <% if @stories.blank? %>
      <p>
        <%= t('.no_stories') %>  
      </p>
    <% else %>

      <% @stories.each_with_index do |story,s_i| %>       
          <div class="col n-4">  
            <%= render partial: "shared/grid_item" , locals:{:story=>story}%> 
          </div>  
      <% end %>
    <% end %>
  </div> 
  <%= page_navigation_links @stories %>   
</div>                             


<% if @editable %>
  <% content_for(:footer) { %>
    <div id="modalos-preview" style="display:none;width:100%;height:100%;"></div>

    <div id="modalos-reviewer" style="display:none;width:100%;height:100%;" >
        <div class="page-header">
          <div class="block">
            <h1>
              <%= t('stories.reviewer_key.title') %>
            </h1>
          </div>
        </div>
       <p id="review_instructions">
          <%= t('stories.reviewer_key.desc', :title => '[title]') %>
      </p>
        
        <div><a id='review_url' href='#'></a></div>    
        <div>
          <button id="copy-button" class="btn btn-mini" data-clipboard-target="review_url"><%= t('.copy') %></button>
        </div>                          
        <div id="copied" style="display: none;" class="alert alert-success">
            <%= t('.copied') %>
        </div>     
    </div>
  <% } %>
<% end %>