  <%  
    title = ""   
    if story.about.present?     
      title = truncate(strip_tags_nbsp(story.about), length: 160, separator: ' ')
    end    
  %>   
            
  <div class="story-thumbnail">
     <% if story.staff_pick? %>
    <div class="story-picked" title="<%= t('helpers.links.staff_pick') %>"></div>
  <% end %>   
     <%= link_to @editable ? preview_story_path(story) : storyteller_show_path(story.permalink) do %>
        <%= image_tag story.show_asset.asset.url(:thumbnail), :height => '328', :width => '459' %>              
        <div class="story-link">
          <span><%= title.html_safe %></span>
          <div class="explore"><%= t('app.buttons.explore') %></div>          
       </div>  
 
      <% end %>

    <% if @editable %>
      <div class="story-edit">                   
        <div class="story-edit-menu">
        <ul class="nav">
        <li class="dropdown dropdown-hover">
         <button type="button"  class="btn dropdown-toggle" data-toggle="dropdown"> 
          <i class="glyphicon glyphicon-pencil" ></i>
        </button>                   
          <ul class="dropdown-menu">
            <li>
                <%= link_to edit_story_path(story) do %>                            
                  <i class="glyphicon glyphicon-info-sign"></i><%=t('helpers.links.edit_story')%>

                <% end %>
            </li>
            <li>
              <%= link_to  sections_story_path(story) do %>
              <i class="glyphicon glyphicon-picture"></i><%=t('helpers.links.admin_story')%>
              <% end %>
            </li>
            <li>
              <%= link_to  collaborators_story_path(story), title: t('helpers.links.story_menu.title.collaborators') do %>
              <i class="glyphicon glyphicon-user"></i><%=t('helpers.links.story_menu.link.collaborators')%>
              <% end %>
            </li>
            <li>
              <a href="#" id='btnPreview' class='preview' title="<%= t('app.buttons.preview') %>" data-link='<%= preview_story_path(story) %>'
                  data-modalos-id='modalos-preview' data-type='story'>
                <i class="glyphicon glyphicon-eye-open" ></i><%= t('app.buttons.preview') %>
              </a>
            </li>
            <li>                            
              <a href="#" id='btnPublish' <%= 'class="disabled"' if !story.published %> data-link='<%= publish_story_path(story) %>'>
                <i class="glyphicon glyphicon-globe" ></i><span><%= story.published ? t('app.buttons.unpublish') : t('app.buttons.publish') %></span>
              </a>
            </li>
            <% if !story.published %> 
              <li>
                 <a href="#" id='btnReviewer' title="<%= t('helpers.links.story_menu.title.review') %>" data-modalos-id='modalos-reviewer'
                    data-reviewer-key='<%= review_url(story.reviewer_key) %>'
                    data-title='<%= story.title %>'>
                  <i class="glyphicon glyphicon-share" ></i><%= t('helpers.links.story_menu.link.review') %>
                </a>                                                
              </li>
            <% end %>
            <li>
              <%= link_to clone_story_path(story) ,  title: t('helpers.links.story_menu.title.clone') do %>
                <i class="glyphicon glyphicon-camera"></i><%=t('helpers.links.story_menu.link.clone')%>
              <% end %> 
            </li>                        
            <li>  
              <%= link_to export_story_path(story) ,  title: t('helpers.links.story_menu.title.export') do %>
                <i class="glyphicon glyphicon-download"></i><%=t('helpers.links.story_menu.link.export')%>
              <% end %>
            </li>                        
            <li>
              <%= link_to story, confirm: t("helpers.links.confirm"), method: :delete do %>
                <i class="glyphicon glyphicon-remove"></i><%=t('helpers.links.delete_story')%>
              <% end %>
            </li>
          </ul>
          </li>
          </ul>
        </div>
      </div> 
      <div class='story-message'></div>
    <% end %>
    
  </div>
  <div class='story-info'>                               
  <div class="story-caption">
    <%= link_to truncate(story.title, length: 45, separator: ' '), @editable ?  preview_story_path(story) : storyteller_show_path(story.permalink), :title => story.title %>
  </div>
    <div class="story-misc"> 
      <div class="story-misc-left">     
        <div class="story-author">
            <%= link_to story.user.nickname, author_path(story.user.permalink), :title => story.user.nickname, :class => 'author' %>
        </div>

        <div class="separator"></div>
        <div class="story-publish" title="<%= t('.publish_date') %>"><%= l(story.published_at,:format => :publish) if story.published_at.present? %></div>  
            <!-- <div class="story-likes">
             <%= content_tag(:span, story.likes, :class => "n#{story.likes.to_s.size}" ) %>
            </div>   -->
    </div> 
    <div class="story-misc-right">
      <div class="story-stats"> 
        <span class="likes" title="<%= t('.likes') %>"><i class="s i-likes disabled"></i><%= story.likes %></span>            
        <span class="views" title="<%= t('.views') %>"><i class="s i-views disabled"></i><%= story.impressions_count %></span>  
        <span class="comments" title="<%= t('.comments') %>"><i class="s i-comment disabled"></i><%= story.comments_count%></span>
      </div> 
    </div>                                           
  </div> 
</div>
