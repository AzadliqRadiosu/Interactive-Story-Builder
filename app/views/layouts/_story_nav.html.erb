<%     
  showing_story ||= false  
  @root_page ||= false  
%>
   <nav class="navbar navbar-default navbar-static-top navbar-storybuilder">
      <div class="container-fluid">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
        <div class="pull-left logo">
          <%= link_to(image_tag("logo.png",:size=>"182x29",:style=>"vertical-align:middle;",:alt=>t('app.common.app_name')) , root_path(:locale => I18n.locale))%>          
        </div>

          <div class="nav-collapse navbar-collapse nav-user pull-right" id="bs-example-navbar-collapse-1">
            <ul class="nav">         
                    <li>
              <a><img src="/assets/facebook-circle-white.png"/></a>
                </li>
                 <li>
          <a> <img src="/assets/twitter-circle-white.png"/></a>
                </li>
                 <li>
                 <a><img src="/assets/google-plus-circle-white.png"/></a>
                </li> 
              <% if user_signed_in? %>
                  <li >
                    <%= link_to image_tag(current_user.avatar_url,:size=>"28x28", :class=>"avatar"), "#" , 
                         :class => "dropdown-toggle avatar-link", :"data-toggle"=>"dropdown" %>       
                       
                    <ul class="dropdown-menu pull-right">
                      <li>
                        <%= link_to t('helpers.links.add_story'), new_story_path  %>
                      </li>              
                      <li>
                        <%= link_to t('helpers.titles.story_list'), stories_path  %>
                      </li>              
                      <li>
                        <%= link_to t('helpers.links.user_settings'), settings_path  %>
                      </li>              
                      <% if current_user.role? User::ROLES[:admin] %>
                        <li>
                         <%= link_to t('helpers.links.news'), admin_news_index_path %>
                        </li>
                        <li>
                         <%= link_to t('helpers.links.users'), admin_users_path %>
                        </li>
                      <% end %>   
                      <li class="divider"></li>  
                      <li>
                       <%= link_to t('helpers.links.sign_out'), destroy_user_session_path, :method => :delete %>
                      </li>
                    </ul>
                  </li>
              <% else %>
                 <li>
                  <%= link_to t('helpers.links.sign_in2'), :new_user_session %>
                </li>
             <% end %> 
              <% I18n.available_locales.each do |locale| %>
                <% if locale != I18n.locale %>
                  <li><%= link_to t("app.language.#{locale}"), params.merge(:locale => locale) , :"data-target"=>".nav-collapse", :"data-toggle"=>"collapse", :class => "lang_switch" %></li>
                <% end %>
              <% end %>                             
            </ul>
          </div>
        </div>
      </nav>
   <nav class="navbar navbar-default navbar-static-top navbar-story">
      <div class="container-fluid">
      <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
        <div class="pull-left">          
        <div class="title">
            <% if @story.present? && showing_story %>
              <%= link_to(@story.title, root_path(:locale => I18n.locale), :class=>"navigation-headline brand font" , :"data-target"=>".nav-collapse", :"data-toggle"=>"collapse")%>  
            <% end %>
         </div>
            <div class="nav-separator"></div>
         <div class="about">     
          <a id="modalAbout" data-modalos-id="modalos-about">About</a>
          </div>
        </div>
        
          <div class="nav-collapse navbar-collapse pull-right" id="bs-example-navbar-collapse-1">
            <ul class="nav">                       
              <li><a id="modalComment" data-modalos-id="disqus_thread">Comment</a></li>
              <% if @story.present? && @story.sections.present? && showing_story %>                
                
                <li><a href="#" class="navigation-volume"><div class="navigation-icon"></div></a></li>             
                 <li>
                  <% markers = @story.sections.select{|t| (t.ok? && t.has_marker? == true) } %>      
                  <% if markers.length > 1 %>    
                    <div class="navigation-sections">     
                     <% markers.each_with_index do |s,s_i| %>
                      <a href="#<%= s_i+1 %>" class="navigation-section" title="<%= s.title %>"><%= s_i+1 %></a>
                     <% end %>          
                    </div>
                  <% end %>
                </li>            
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    

    <div id="modalos-about" style="display:none;">

                 <div class="story-info-top">
                     <div class="story-title">          
                      <div class="data-block">
                   
                        <div class="nav-title"><%= @story.title %></div>
                       <div class="social">                                      
                        <img src="/assets/fb_.png" style="width:33px; height:33px;"/>
                        <img src="/assets/twitter_.png"  style="width:33px; height:33px;"/>
                        <img src="/assets/mail_.png"  style="width:33px; height:33px;"/>
                      </div>     
                       
                        <div class="clear"> 
                          <div class="story-thumbnail"><%= image_tag @story.show_asset.asset.url(:thumbnail), :height => '185', :width => '259', :align => 'left', :alt =>  @story.title %>
                                <%= @story.about.html_safe  if @story.about.present? %> </div>
                   
                        </div>

                      </div> 
                 </div> 
                  <div class="profile-data">
                          <div class="profile-logo"><%= image_tag @story.user.avatar_url(:'168x168'),:size=>"168x168", align:'left' %></div>
                          <div class="profile-info">
                            <div class="profile-nickname"><%= "#{@story.user.nickname}" %></div>
                            <div class="profile-about"><%= @story.user.about.html_safe if @story.user.about.present? %></div>          
                          </div>   
                        </div>    
                  </div>
              <div class="story-info-bottom">
                     <div class="story-chapters">
                      <div class="left-corner"></div>
                       <div class="data-block">   
                       <div class="story-test">                            
                                <% markers = @story.sections.select{|t| (t.ok? && t.has_marker? == true) } %>      
                                <% if markers.length > 1 %>    
                                  <div class="nav-chapters">     
                                   <% markers.each_with_index do |s,s_i| %>
                                    <a href="#<%= s_i+1 %>" class="navigation-section" ><%= "#{s_i+1}. #{s.title}" %></a>
                                   <% end %>          
                                  </div>
                                <% end %>
                       </div>
                      <div class="story-test2">    
                          <div class="nav-categories">
                        <% 
                            colors = ["turquoise","green-sea","emerland","nephritis",
                            "peter-river","belize-hole","amethyst","wisteria",
                            "wet-asphalt","midnight-blue","sun-flower","orange",
                            "carrot","pumpkin","alizarin","pomegranate",
                            "clouds","silver","concrete","asbestos"]
                          @story.categories.each{|t| %>
                            <div class="color <%= colors.sample %>"><%= "#{t.name}" %></div>
                          <%}%>
                        </div>


                         <div class="nav-languages">
                            <div class="lang"><%= "#{ @story.language.name}" %></div>   
                        </div>  

                        <div class="nav-tags">
                          <% ["Boats","China","Fish"].each{|t| %>
                              <div class="tag"><%= "#{t}" %></div>
                            <%}%>              
                        </div> 
                    
                          </div>

                        <div class="comments">
                         
                        </div>

                    </div>

                       <div class="right-corner"></div>
                    </div>
              </div>
  
    </div>
