<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? "#{yield(:title)} | #{t('app.common.app_name_not_trans')}" :
				t('app.common.app_name_not_trans') %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>

	  <meta property="og:title" content="<%= content_for?(:title) ? ("#{yield(:title)} | #{t('app.common.app_name_not_trans')}").html_safe :
			  t('app.common.app_name_not_trans').html_safe %>" />
	  <% if false %>
      <meta name="description" content="">
  		<meta property="og:description" content="" />
    <% end %>
	  <meta property="og:type" content="non_profit" />
	  <meta property="og:url" content="<%= current_url %>" />
	  <% if @story && @story.id && @story.asset_exists? %>
	     <meta property="og:image" content="<%= full_url(@story.asset.asset.url(:"250x250", false)) %>" />
    <% else %>
      <meta property="og:image" content="<%= full_url('/assets/fb-img.jpg') %>" />
	  <% end %>
	  <meta property="og:site_name" content="<%= t('app.common.app_name_not_trans') %>" />
	  <meta property="fb:app_id" content="<%= ENV['STORY_BUILDER_FACEBOOK_APP_ID'] %>" />

    <meta name="google" content="notranslate" />

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag  *(@css.present? ? ["application",@css].flatten : ["application"]), :media => "all" %>      
    <%= auto_discovery_link_tag(:atom, feed_path(:format => "atom")) %>
  	<% if @usemap %>
  		<link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.css" />
  	<% end %>
    

		<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body id="storybuilder_form">
    <%= render partial: "layouts/storybuilder_nav"%>   
    <%= render partial: "shared/story_nav"%>   
		<div class="builder-wrapper">	
     <div class="toolbar">
        <div class="story-title"><span><%= @story.title %></span></div>             
        <div class='tools'>         
          <div class="left-view">
                   <div class='view-wrapper'> 
            <%= link_to '#', title: t('helpers.links.story_menu.link.preview') + ' - ' + t('helpers.links.story_menu.title.preview'), class: 'btn btn-edit-story btn-primary' do %>
                <span class="glyphicon glyphicon-edit" ></span>          
              <% end %>

            <%= link_to '#', title: t('app.buttons.add_section') , class: 'btn btn-create-section' do %>
                <span class="glyphicon glyphicon-align-justify" ></span>          
              <% end %>

              <%= link_to '#', title: t('helpers.links.story_menu.link.preview') + ' - ' + t('helpers.links.story_menu.title.preview'), id: 'btnPreview', class: 'preview btn btn-preview', 
                  :'data-link' => @story.published ? storyteller_show_path(@story.permalink) : preview_story_path(@story), 
                  :'data-modalos-id' => 'modalos-preview', :'data-type' => 'story' do %>
                <span class="glyphicon glyphicon-eye-open" ></span>          
              <% end %>
            <% if !@story.published %> 
                <%= link_to '#', title: t('helpers.links.story_menu.link.review') + ' - ' + t('helpers.links.story_menu.title.review'), id: 'btnReviewer', class: 'btn btn-review',
                    :'data-title' => @story.title, :'data-modalos-id' => 'modalos-reviewer', :'data-reviewer-key' => review_url(@story.reviewer_key) do %>
                    <span class="glyphicon glyphicon-share" ></span>        
                <% end %>
            <% end %>
              <% 
                title = @story.published ? t('helpers.links.story_menu.title.unpublish') : t('helpers.links.story_menu.title.publish') 
                link_text = @story.published ? t('helpers.links.story_menu.link.unpublish') : t('helpers.links.story_menu.link.publish') 
              %>
              <%= link_to '#', title: link_text + ' - ' + title, id: 'btnPublish', class: 'btn btn-publish' + (@story.published ? '' : 'disabled'), 
                  :'data-link' => publish_story_path(@story) do %>
                <span class="glyphicon glyphicon-globe" ></span>
              <% end %>
              <%= link_to @story, title: t('helpers.links.story_menu.link.delete_story') + ' - ' + t('helpers.links.story_menu.title.delete_story'), 
               class: 'preview btn btn-remove-story', confirm: t("helpers.links.confirm"), method: :delete do %>
                <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            <% if @tr %>
           <%= select_tag "translate-from", options_from_collection_for_select(@languages, "locale", "name", @story.story_locale), include_blank: false,
                 :id => "translateFrom", :class => "selectpicker", :'data-size' => "5", :'data-default' => @story.story_locale  %>
           <% end %>
            </div>
        </div><div class='right-view'>          
          <div class='view-wrapper'> 
                 <%= select_tag "translate-to", options_from_collection_for_select(@languages.select{ |lan|  lan.locale !=  @story.story_locale } , "locale", "name", @languages.select{ |lan|  lan.locale !=  @story.story_locale }.sort{|a,b| a <=> b}[0].locale), include_blank: false, :id => "translateTo", :class => "selectpicker", :'data-size' => "4" %>
          </div>
        </div>
      </div>      
      <div class="flash-message">
        <% flash.each do |key, msg| %>
          <div class="alert <%= flash_translation(key) %> fade in">
            <a href="#" data-dismiss="alert" class="close">Ã—</a>
            <%= msg %>
          </div>
        <% end %>
      </div>       
  </div>




      <div class="content">
        <div class="sidebar o">
          <%= yield %>
        </div>
        <div class="workplace<%= @tr ? ' tr' : '' %>">
          <div class='story-viewer story-page1 viewer' id='storyViewer'></div><% if @tr %><div class='story-page2 viewer'></div><% end %>
        </div>
      </div>
    </div>
    <%= yield(:footer) %>
    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag  *(@js.present? ? ["application", @js].flatten : ["application"]), :media => "all" %>      
    <script>
      function calculate_workspace()
      {
        var bw = $(".builder-wrapper");  
        var nav =  $('.nav-tabs');
        var t = bw.find('.toolbar');       

        var topOffset = t.outerHeight()+t.offset().top;
        
        bw.height($(window).height()- nav.outerHeight()-nav.offset().top);

        var bwh = $(window).height()-topOffset;
        var content = bw.find("> .content");
        var toolbar = bw.find("> .toolbar");

        var sidebar = content.find("> .sidebar");
        var workplace = content.find("> .workplace");
        var tree =  sidebar.find("> .story-tree");
        

        tree.height(bwh);
        workplace.height(bwh);

        content.css('top',topOffset + 'px');
      }
      $(document).ready(function(){
        calculate_workspace();  
      });
      $(window).resize(function() {   
          calculate_workspace();
      });
    </script>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>
		<% if @usemap %>
  		<script src="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js" type="text/javascript"></script>
		<% end %>
